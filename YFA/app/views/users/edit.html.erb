 <%= render "layouts/header" %>

<div class = "pure-g">

	<div class = "pure-u-1 container">
		<h1> Editing fun! </h1>

		<div class = "pure-form">
	
			<%= form_for @interest, url: user_path do |f| %>
			
			<h3>What are your interests?</h3>

			<%= f.hidden_field :id, value: @me.id %>
			<!-- TAKE A LOOK AT THIS ^^ -->

			<p><%= f.label "acting" %>
			<%= f.check_box :acting %></p> 

			<p><%= f.label "directing" %>
			<%= f.check_box :directing %></p>


			<p><%= f.label "editing" %>
			<%= f.check_box :editing %></p>


			<p><%= f.label "costumes" %>
			<%= f.check_box :costumes %></p>


			<p><%= f.label "cinematography" %>
			<%= f.check_box :cinematography %></p>


			<p><%= f.label "camerawork" %>
			<%= f.check_box :camerawork %></p>


			<p><%= f.label "sound" %>
			<%= f.check_box :sound %></p>



			<%= f.submit "Save Changes", class: "button-signup pure-button" %>
			<% end %>










		</div>

		


	</div>
</div>



