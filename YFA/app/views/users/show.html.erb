<%= render "layouts/header" %>


<div class = "pure-g">
<div class = "pure-u-1 container">
	
		<h1>Hello, <%= @me.name%></h1>
		<p>
		<%= @me.college %> <br>
		<%= @me.year %> <br>

		</p>


		<h3>Interests</h3>
		
		<% @me.interest.attributes.each_pair do |name, value| %>
			<% if value == "1" %>
			
				<div class = "pure-u-1-3">
					<p><%= name %></p>
				</div>
			
			<% end %>
		<% end %>
		
			<h3>Filmography</h3>

			<% @me.projects.each do |project| %>
				<p><%= link_to project.title, project_path(project.id)%></p>
			<% end %>

		<h2> <%= link_to "Edit your information, friend!", edit_user_path(@me) %></h2>
		<%= link_to "Create a Project", new_project_path, class: "pure-button" %>



		</div>
		
	
</div>
</div>
		


		

		


	
